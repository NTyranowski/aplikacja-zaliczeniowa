@model IEnumerable<Strona_do_rezerwacji_biletów.Models.Event>

@{
    ViewData["Title"] = "Wydarzenia";
}

<h1>Dostępne wydarzenia  </h1>
@if(User.IsInRole("Admin") )
{
    <a href="@Url.Action("Add", "Events")" class="mb-2 btn btn-primary">Dodaj wydarzenie</a>
}

<!-- Formularz filtrowania -->
<form method="get" asp-action="Index" asp-controller="Events" class="mb-3">
    <div class="input-group">
        <select name="category" class="form-select">
            <option value="">Wszystkie kategorie</option>
            @foreach (var category in ViewBag.Categories as List<string>)
            {
                if (ViewBag.SelectedCategory == category)
                {
                    <option value="@category" selected>
                        @category
                    </option>
                }
                else
                {
                    <option value="@category">
                        @category
                    </option>
                }
            }
        </select>
        <button type="submit" class="btn btn-primary">Filtruj</button>
    </div>
</form>

<!-- Tabela wydarzeń -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Tytuł</th>
            <th>Data</th>
            <th>Szczegóły</th>
            <th>Kategoria</th>
            <th>Dostępne bilety normalne</th>
            <th>Dostępne bilety VIP</th>
            <th>    </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(ev.Description.Length > 10 ? ev.Description.Substring(0, 10) + "..." : ev.Description)</td>
                <td>@ev.Category</td>
                <td>@ev.AvailableNormalSeats</td>
                <td>@ev.AvailableVIPSeats</td>
                <td>
                    <a href="@Url.Action("Details", "Events", new { id = ev.Id })" class="btn btn-primary">Szczegóły wydarzenia</a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center">Brak dostępnych wydarzeń.</td>
            </tr>
        }
    </tbody>
</table>