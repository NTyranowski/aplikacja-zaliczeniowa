@model IEnumerable<Strona_do_rezerwacji_biletów.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>Available Events</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Description</th>
            <th>Category</th>
            <th>Available Seats</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ev.Description</td>
                <td>@ev.Category</td>
                <td>@ev.AvailableSeats</td>
                <td>
                    <a href="@Url.Action("Details", "Events", new { id = ev.Id })" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
        if (!Model.Any())
        {
        <tr>
            <td colspan="6" class="text-center">No events available.</td>
        </tr>
        }
    </tbody>
</table>
