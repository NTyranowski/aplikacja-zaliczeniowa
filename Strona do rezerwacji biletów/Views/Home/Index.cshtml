@model IEnumerable<Strona_do_rezerwacji_biletów.Models.Event>

@{
    ViewData["Title"] = "Available Events";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Available Events</h1>
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var ev in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@ev.Title</h5>
                            <p class="card-text text-muted">
                                <strong>Date:</strong> @ev.Date.ToString("yyyy-MM-dd HH:mm")
                            </p>
                            <p class="card-text">
                                <strong>Category:</strong> @ev.Category
                            </p>
                            <p class="card-text text-truncate">
                                @ev.Description
                            </p>
                            <p class="card-text">
                                <strong>Available Seats:</strong> @ev.AvailableSeats
                            </p>
                            <a href="@Url.Action("Details", "Events", new { id = ev.Id })" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">No events available at the moment. Please check back later.</p>
            </div>
        }
    </div>
</div>
