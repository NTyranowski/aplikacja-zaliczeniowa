@model Strona_do_rezerwacji_biletów.Models.Event

<h1>Reserve Tickets</h1>
<form method="post" action="/Events/Reserve">
    <input type="hidden" name="eventId" value="@Model.Id" />
    <p>Event: @Model.Title</p>
    <p>Seats Available: @Model.AvailableSeats</p>
    <label for="seatsReserved">Seats to Reserve:</label>
    <input type="number" name="seatsReserved" min="1" max="@Model.AvailableSeats" required />
    <button type="submit">Reserve</button>
</form>
