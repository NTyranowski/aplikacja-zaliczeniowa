<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperBilet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            font-family: 'Arial', sans-serif;
            background-color: #ffffff; /* Białe tło dla minimalistycznego wyglądu */
            color: #333333; /* Neutralny ciemnoszary kolor tekstu */
        }

        h2 {
            cursor: pointer;
            transition: color 0.3s, background-color 0.3s;
        }

            h2:hover {
                color: #555555; /* Delikatnie ciemniejszy szary podczas najechania */
                background-color: #f9f9f9; /* Subtelne szare tło */
            }

        main {
            flex: 1;
        }

        .navbar {
            background-color: #333333; /* Neutralny ciemnoszary kolor dla nagłówka */
        }

        .navbar-brand, .nav-link, .navbar-nav .nav-item a{
            color: #ffffff !important; /* Jasny kolor tekstu dla kontrastu */
        }

            .nav-link:hover, .navbar-nav .nav-item a:hover{
                color: #c7c7c7 !important; /* Akcentowy kolor na hover */
            }

            .navbar-nav .nav-item a{

            }
        .hero-section {
            background: #f4f4f4; /* Jasnoszare tło */
            color: #333333; /* Ciemnoszary tekst */
            padding: 40px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 2.5rem;
                margin-bottom: 15px;
            }

        footer {
            background-color: #333333; /* Dopasowanie kolorystyki do nagłówka */
            color: #ffffff; /* Jasny tekst */
            text-align: center;
            padding: 15px 0;
            margin-top: auto;
        }

        footer a{
            font-weight: bold;
            color: #ffffff;
            text-decoration: underline;
        }

        footer a:hover {
            color: #c7c7c7;
            text-decoration: underline;
        }

        a {
            color: #6e6e6e;
        }

        a:hover {
            color: black;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>SuperBilet</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Wydarzenia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="MyReservations">Moje rezerwacje</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="hero-section">
        <h1>@ViewData["Title"]</h1>
        <p>Zarezerwuj swoje miejsce na najważniejszych wydarzeniach!</p>
    </div>
    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>
    <footer>
        <p>&copy; 2024 Rezerwacja Biletów | <a asp-controller="Home" asp-action="Privacy">Polityka prywatności</a></p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
