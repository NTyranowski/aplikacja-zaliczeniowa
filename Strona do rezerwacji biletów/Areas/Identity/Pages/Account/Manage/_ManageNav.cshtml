@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item btn-dark"><a class="nav-link" id="profile" asp-page="./Index">Profil</a></li>
    <li class="nav-item btn-dark"><a class="nav-link" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item btn-dark"><a class="nav-link" id="change-password" asp-page="./ChangePassword">Hasło</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link" asp-page="./ExternalLogins">Zewnętrzne logowanie</a></li>
    }
    <li class="nav-item btn-dark"><a class="nav-link" id="two-factor" asp-page="./TwoFactorAuthentication">Uwierzytelnianie dwuskładnikowe</a></li>
    <li class="nav-item btn-dark"><a class="nav-link" id="personal-data" asp-page="./PersonalData">Dane osobowe</a></li>
</ul>
